{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "removeComments": false,
        "rootDir": ".",
        "outDir": "../",
        "jsx": "react",
        "sourceMap": false,
        "skipDefaultLibCheck": true,
        "declaration": false,
        "pretty": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "@types",
        "__tests__"
    ]
}
