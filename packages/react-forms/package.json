{
    "name": "@simplr/react-forms",
    "version": "4.3.3",
    "description": "Shared @simplr/react-forms logic.",
    "repository": "SimplrJS/react-forms",
    "homepage": "https://github.com/SimplrJS/react-forms",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "author": "SimplrJS <simplr@quatrodev.com> (https://github.com/simplrjs)",
    "scripts": {
        "build": "tsc -p .",
        "pretest": "tsc -p . --noEmit",
        "test": "jest",
        "test-ci": "jest --maxWorkers=4",
        "docs-gen": "ts-docs-gen --entryFile ./src/index.ts"
    },
    "license": "AGPL-3.0",
    "files": [
        "**/*.md",
        "*.js",
        "**/*.d.ts",
        "!*.config.js",
        "!gulpfile.js",
        "!node_modules/**"
    ],
    "devDependencies": {
        "@types/enzyme": "^3.1.9",
        "@types/jest": "^22.1.2",
        "@types/react-dom": "^16.0.4",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest": "^22.3.0",
        "jest-environment-jsdom": "^22.4.0",
        "jest-enzyme": "^4.2.0",
        "react-dom": "^16.2.0",
        "simplr-tslint": "^1.0.0-alpha.4",
        "ts-docs-gen": "^0.2.0",
        "ts-jest": "^22.0.4",
        "tslint": "^5.9.1",
        "typescript": "^2.7.1"
    },
    "dependencies": {
        "@types/fbemitter": "^2.0.32",
        "@types/react": "^16.0.38",
        "action-emitter": "^0.2.1",
        "fbemitter": "^2.1.1",
        "react": "^16.2.0",
        "tslib": "^1.9.0"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "./__tests__/tests-configuration.ts",
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    }
}
