    "license": "AGPLv3",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -b",
        "build:watch": "tsc -b -w",
        "pretest": "tsc -b && eslint \"src/**/*.ts*\" -f visualstudio --quiet || exit 0",
        "test": "jest",
        "test:watch": "jest --watch",
        "test-build:watch": "run-p build:watch test:watch",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "files": [
        "dist",
        "**/*.md"
    ],
    "peerDependencies": {
        "react": "16.11.0"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.7.2",
        "@reactway/eslint-config": "^1.0.0-alpha.5",
        "@reactway/forms-core": "1.0.0",
        "@storybook/addon-actions": "^5.2.6",
        "@storybook/addon-links": "^5.2.6",
        "@storybook/addons": "^5.2.6",
        "@storybook/react": "^5.2.6",
        "@types/jest": "24.0.23",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.6",
        "eslint": "6.6.0",
        "jest": "24.9.0",
        "jest-junit": "9.0.0",
        "ts-jest": "24.1.0",
        "typescript": "3.7.2"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts"
        ],
        "coverageReporters": [
            "cobertura"
        ]
    }
}
