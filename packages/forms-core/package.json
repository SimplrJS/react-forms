    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "build:watch": "tsc -p . -w",
        "pretest": "tsc -p . --noEmit && eslint --quiet",
        "test": "jest",
        "test:watch": "jest --watch",
        "test-build:watch": "run-p build:watch test:watch"
    },
    "files": [
        "dist",
        "**/*.md"
    ],
    "dependencies": {
        "@reactway/tiny-emitter": "^1.0.2",
        "immer": "^4.0.1"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts"
        ],
        "coverageReporters": [
            "cobertura"
        ]
    }
}
