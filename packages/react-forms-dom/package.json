{
  "name": "@simplr/react-forms-dom",
  "version": "4.2.0",
  "description": "DOM components for @simplr/react-forms.",
  "repository": "SimplrJS/react-forms",
  "homepage": "https://github.com/SimplrJS/react-forms",
  "main": "index.js",
  "types": "index.d.ts",
  "author": "simplrjs <simplr@quatrodev.com> (https://github.com/simplrjs)",
  "scripts": {
    "build": "gulp",
    "watch": "webpack -w",
    "uglifyjs": "uglifyjs ./dist/react-forms-dom.js -o ./dist/react-forms-dom.min.js --compress --mangle",
    "release": "npm run build && npm run uglifyjs",
    "test": "jest && npm run test-tsc && npm run test-tslint",
    "test-tslint": "tslint --config ./tslint.json --project tsconfig.json && echo TsLint test successfully passed.",
    "test-tsc": "tsc -p . --noEmit",
    "test-watch": "jest --watchAll",
    "test-coverage": "npm test -- --coverage",
    "prepublishOnly": "npm run build",
    "gulp-build": "tsc -p ./tools/tsconfig.gulp.json",
    "gulp-watch": "npm run gulp-build -- -w"
  },
  "license": "AGPL-3.0",
  "files": [
    "**/*.md",
    "*.js",
    "**/*.d.ts",
    "!*.config.js",
    "!gulpfile.js",
    "!node_modules/**"
  ],
  "devDependencies": {
    "@simplr/mvdir": "0.0.2",
    "@types/chokidar": "^1.7.0",
    "@types/enzyme": "^2.8.1",
    "@types/gulp": "^4.0.4",
    "@types/jest": "^20.0.2",
    "@types/sinon": "^2.3.2",
    "@types/undertaker": "^1.1.2",
    "@types/vinyl-fs": "^2.4.5",
    "@types/webpack": "^3.0.1",
    "enzyme": "^2.9.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.4.0",
    "react-test-renderer": "^15.6.1",
    "sinon": "^2.3.6",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.2",
    "tslint": "^5.4.3",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.23",
    "webpack": "^3.0.0"
  },
  "dependencies": {
    "@simplr/react-forms": "^4.2.0",
    "@types/classnames": "^2.2.0",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^15.0.34",
    "classnames": "^2.2.5",
    "immutable": "^3.8.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "tslib": "^1.7.1",
    "typed-immutable-record": "^0.0.6"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
