{
  "name": "@simplr/react-forms-dom",
  "version": "4.4.0-alpha.7",
  "description": "DOM components for @simplr/react-forms.",
  "repository": "SimplrJS/react-forms",
  "homepage": "https://github.com/SimplrJS/react-forms",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "SimplrJS <simplr@quatrodev.com> (https://github.com/simplrjs)",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest && npm run test-tsc && npm run test-tslint",
    "test-ci": "npm run test",
    "test-tslint": "tslint --config ./tslint.json --project tsconfig.json && echo TsLint test successfully passed.",
    "test-tsc": "tsc -p . --noEmit",
    "test-watch": "jest --watchAll",
    "test-coverage": "npm test -- --coverage",
    "prepublishOnly": "npm run build",
    "tools-build": "echo 'No tools needs to be built. Skipping...';"
  },
  "license": "AGPL-3.0",
  "files": [
    "**/*.md",
    "*.js",
    "**/*.d.ts",
    "!*.config.js",
    "!node_modules/**"
  ],
  "devDependencies": {
    "@simplr/mvdir": "0.0.2",
    "@types/chokidar": "^1.7.0",
    "@types/enzyme": "^2.8.1",
    "@types/jest": "^20.0.2",
    "@types/sinon": "^2.3.2",
    "enzyme": "^2.9.1",
    "fast-glob": "^2.2.1",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.4.0",
    "react-test-renderer": "^16.3.2",
    "rollup": "^0.58.2",
    "rollup-plugin-auto-external": "^1.2.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "^2.3.6",
    "source-map-loader": "^0.2.1",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.2",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "@simplr/react-forms": "4.4.0-alpha.7",
    "@types/classnames": "^2.2.3",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.13",
    "classnames": "^2.2.5",
    "immutable": "^3.8.2",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "tslib": "^1.9.0",
    "typed-immutable-record": "^0.0.6"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
