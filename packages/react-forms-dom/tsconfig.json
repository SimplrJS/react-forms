{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "removeComments": false,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "declaration": true,
        "pretty": true,
        "strict": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "strictPropertyInitialization": false,        
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "@types",
        "__tests__",
        "tools"
    ]
}
